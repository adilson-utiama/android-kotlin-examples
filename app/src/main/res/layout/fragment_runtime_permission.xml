<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCameraPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="@style/AppTheme.DefaultButtonStyle"
        android:text="Request Camera Permission" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStoragePermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCameraPermission"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="@style/AppTheme.DefaultButtonStyle"
        android:text="Request Storage Permission" />


</RelativeLayout>